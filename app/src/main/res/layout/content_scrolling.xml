<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.tqrg.physalia.testapp.ScrollingActivity"
    tools:showIn="@layout/activity_scrolling">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <Button
        android:id="@+id/button_1"
        android:contentDescription="Button One"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/text_margin"
        android:layout_marginLeft="@dimen/text_margin"
        android:layout_marginRight="@dimen/text_margin"

        android:text="@string/button_one"/>
    <Button
        android:id="@+id/button_2"
        android:contentDescription="Button Two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/text_margin"
        android:layout_marginRight="@dimen/text_margin"
        android:layout_marginTop="0px"
        android:text="@string/button_two"/>
    <Button
        android:id="@+id/button_3"
        android:contentDescription="Button Three"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/text_margin"
        android:layout_marginRight="@dimen/text_margin"
        android:layout_marginTop="0px"
        android:text="@string/button_three"/>

    <EditText
        android:id="@+id/text_field"
        android:contentDescription="Text Field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/text_margin"
        android:layout_marginRight="@dimen/text_margin"
    />
    <com.tqrg.physalia.testapp.DoodleCanvas
        android:id="@+id/paint"
        android:contentDescription="Paint"
        android:layout_width="match_parent"
        android:layout_height="400px"
        android:focusableInTouchMode="true"/>

    <TextView
        android:id="@+id/text_area"
        android:contentDescription="Text Area"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/text_margin"
        android:text="@string/large_text" />
    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
